@model HotelSo.Models.Reservation

@{
    ViewData["Title"] = "Reservation";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<form asp-action="ProceedToCheckout" asp-controller="Reservations" method="get">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <h4>@ViewBag.MessageAvailability</h4>
            <h4>@ViewBag.MessageFutureDates</h4>
           @*  <input type="hidden" asp-for="__RequestVerificationToken" /> *@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ArrivalDate" class="control-label col-md-5"></label>
                <div class="col-md-10">
                    <input asp-for="ArrivalDate" type="date" class="form-control" id="Start_Date" />
                    <span asp-validation-for="ArrivalDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="DepartureDate" class="control-label col-md-5"></label>
                <div class="col-md-10">
                    <input asp-for="DepartureDate" type="date" class="form-control" id="End_Date" />
                    <span asp-validation-for="DepartureDate" class="text-danger"></span>
                </div>
            </div>

            <input asp-for="RoomId" type="hidden" />

            <div class="text-center">
                <div class="col-md-7 mx-auto">
                    <button type="submit" id="Button" class="btn btn-block btn-outline-dark tx-tfm" style="margin: 5px">Book Room</button>
                </div>
            </div>
            <div class="text-center">
                <div class="col-md-7 mx-auto">
                    <a asp-action="Index" asp-controller="Rooms" class="btn btn-block btn-outline-dark tx-tfm" style="margin: 5px">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>


<script>
    function Run() {
        const Start_Date = document.getElementById('Start_Date');
        const End_Date = document.getElementById('End_Date');
        const btn = document.getElementById('Button');
        function check_date() {
            if (Start_Date.value >= End_Date.value) {
                alert("End Date must be after Start Date");
                End_Date.value = "";
            }
        }
        btn.addEventListener('click', check_date);
    }
    window.addEventListener('load', Run);
</script>