@model HotelSo.Models.Reservation
@{
    ViewData["Title"] = "Edit Reservation";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<form asp-action="Edit" asp-controller="Reservations" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />

    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="form-group">
                <label asp-for="ArrivalDate" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="ArrivalDate" type="date" class="form-control" value="@Model.ArrivalDate.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="ArrivalDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="DepartureDate" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="DepartureDate" type="date" class="form-control" value="@Model.DepartureDate.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DepartureDate" class="text-danger"></span>
                </div>
            </div>

            <input asp-for="RoomId" type="hidden" />

            <div class="form-group">
                <div class="col-md-7 mx-auto">
                    <button type="submit" class="btn btn-block btn-outline-dark tx-tfm">Save</button>
                </div>
            </div>

            <div class="text-center">
                <div class="col-md-7 mx-auto">
                    <a asp-action="Index" asp-controller="Reservations" class="btn btn-block btn-outline-dark tx-tfm" style="margin: 5px">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>
